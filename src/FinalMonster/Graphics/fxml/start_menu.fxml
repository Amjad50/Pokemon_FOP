<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" prefHeight="600" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="FinalMonster.Graphics.Controllers.StartMenu">
  <top>
    <HBox alignment="CENTER_RIGHT">
      <Button fx:id="soundBtn" text="&#x1f50a;" onAction="#soundControl" prefWidth="40">
        <HBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </HBox.margin>
      </Button>
    </HBox>
  </top>

  <center>
    <VBox alignment="CENTER" spacing="20">
      <Button onAction="#newGame" styleClass="btn" text="New Game"/>
      <Button onAction="#exit" styleClass="btn" text="Exit"/>
    </VBox>
  </center>
</BorderPane>
