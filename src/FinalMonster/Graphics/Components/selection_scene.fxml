<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root fx:id="root" prefHeight="400.0" prefWidth="600.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.172-ea"
         xmlns:fx="http://javafx.com/fxml/1">

  <bottom>
    <HBox>
      <Button fx:id="play" mnemonicParsing="false" text="PLAY"/>
      <TextField fx:id="player_name" promptText="name"/>
      <Label fx:id="name_warning" visible="false" text="please fill a name" textFill="#ff0000"/>
    </HBox>
  </bottom>
  <center>

    <GridPane fx:id="grid" layoutX="65.0" layoutY="20.0" prefHeight="400.0" prefWidth="600.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="110.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="100.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
    </GridPane>
  </center>
</fx:root>
